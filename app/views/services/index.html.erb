
<div class="right_col" role="main" style="min-height: 3816px;">
          <div class="">
            <div class="page-title">
              <div class="title_left">
                <h3>Services</h3>

                <br/>
              </div>

 <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-info" %>
  <% end %> 


            </div>
            <div class="clearfix"></div>
            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  
                  <div class="x_content">
                  


  <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Services Listing</h2>

                    <ul class="nav navbar-right panel_toolbox">
                      <li><%= link_to 'Create New Service', new_service_path, :class=> 'btn btn-primary' %>
                      </li>
                     
                    </ul>
                    
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                         
                          <th>Title</th>
                          <th>Description</th>
                          <th>Fa-Icon</th>
                          <th>Weight</th>
                          <th>Published?</th>
                          <th colspan="3">Actions?</th>
                        </tr>
                      </thead>
                      <tbody>
                       
 <% @services.each do |service| %>
                        <tr>
                          
                          <td><%= service.title    %></td>
                          <td><%= service.text   %></td>
                          <td><%= service.fa_icon %></td>
                          <td><%= service.weight %></td>

                          <% if(service.published.blank? == true || service.published == '0') 
                              @published = 'No';
                             else 
                              @published = 'Yes'

                             end 
                              


                            %>
                          <td><%= @published %></td>
                           <td><%= link_to 'Show', service_path(service) %></td>
       <td><%= link_to 'Edit', edit_service_path(service) %></td>
      <td><%= link_to 'Delete', service_path(service),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        
<% end %>
                          



                      </tbody>
                    </table>

                  </div>
                </div>
              </div>





                  </div>
                </div>
              </div>
            </div>

           
          </div>
        </div>


